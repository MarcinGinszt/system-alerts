groups:
  - name: cumulus
    rules:
      - alert: CumulusPromtailNotResponding
        expr: up{job="cumulus-promtail"} != 1
        for: 10m
        labels:
          team: infra
        annotations:
          description:
            "{{ $labels.instance }} Promtail service has been down for
            more than 10 minutes."
          summary: Cumulus Promtail service is down
